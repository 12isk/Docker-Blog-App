{% extends 'base.html.twig' %}

{% block title %}Hello PublicController!{% endblock %}

{% block stylesheets %}

<style>

*{
    margin:0;
    padding:0;
}
body{
    font-family: 'Poppins', 'sans-serif';
    font-size:13;
    background-color: #f5f5f5;
    justify-content:center;
    align-items: center;
    margin:0;

}

.heading{
    background-color: rgb(250, 202, 197);
    min-height: 50px;
    margin-bottom:20px;


    } 

.text{
    background-color: #cafafe;
    border-radius: 25px;
    max-width: 800px;
    min-height: 400px;
    padding: 10px;
    justify-content:center;
    align-items: center;
    margin:auto;

}
.comment-wrapper{
    margin-top:150px;
}

.comment{
    display: flex;
    margin:5px;
    font-size: 8;
}

.submit-btn{
    display: flex;
    min-height: 30px;
    padding: 5px;
    background-color: #f8958c;
    border-radius: 5px;
    border:0px;
    
}


</style>

{% endblock %}

{% block body %}

<div class="add_comment">
    {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.author) }}
            </div>
            <div class="col" id="some-custom-id">
                {{ form_row(form.text) }}
            </div>
        </div>

    <button class="submit-btn" type="submit">
        Submit
    </button>
    {{ form_end(form) }}

    
</div> 

     

{% endblock %}