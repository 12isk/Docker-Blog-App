{% extends 'base.html.twig' %}

{% block title %}Hello PublicController!{% endblock %}

{% block stylesheets %}

<style>

*{
    margin:0;
    padding:0;
}
body{
    font-family: 'Poppins', 'sans-serif';
    font-size:13;
    background-color: #f5f5f5;
    justify-content:center;
    align-items: center;
    margin:0;

}

.heading{
    background-color: rgb(250, 202, 197);
    min-height: 50px;
    margin-bottom:20px;


    } 

.text{
    background-color: #cafafe;
    border-radius: 25px;
    max-width: 800px;
    min-height: 400px;
    padding: 10px;
    justify-content:center;
    align-items: center;
    margin:auto;

}
.comment-wrapper{
    margin-top:150px;
}

.comment{
    display: flex;
    margin:5px;
    font-size: 8;
}


</style>

{% endblock %}

{% block body %}


<div class="wrapper">
    
    <div class= "heading">
        <h1> {{article.title}} </h1>
        <h5> Auteur: {{article.author}} </h5>
        <h6> {{article.pubDate | date('d-m-Y')}}</h5>

        
    </div>

    <div class="text">
        {{article.content}}

        <div class="comment-wrapper">
            {% for comment in comments %}
                <div class="comment">
                    <h6>{{comment.text}}<h6>
                    <h6>{{"  " ~ comment.author ~ " @ " ~ comment.pubDate | date('d-m-Y')}}</h6>
                </div>
            {% endfor %}
        </div>
    </div>

    

    </div>

    
</div>
{% endblock %}
